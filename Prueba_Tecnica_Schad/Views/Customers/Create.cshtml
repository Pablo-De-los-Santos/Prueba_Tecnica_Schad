@model Prueba_Tecnica_Schad.Models.DTO.CreateCustemerDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customers.CustName" class="control-label"></label>
                <input asp-for="Customers.CustName" class="form-control" />
                <span asp-validation-for="Customers.CustName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.Adress" class="control-label"></label>
                <input asp-for="Customers.Adress" class="form-control" />
                <span asp-validation-for="Customers.Adress" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Customers.Status" /> @Html.DisplayNameFor(model => model.Customers.Status)
                </label>
            </div>
            <div class="form-group">
               @* <label asp-for="CustomerTypeId" class="control-label"></label>
                <input asp-for="CustomerTypeId" class="form-control" />
                <span asp-validation-for="CustomerTypeId" class="text-danger"></span>*@
                <div class="col-md-6">

                    @{
                        List<SelectListItem> _listItems = new List<SelectListItem>();
                        foreach (var CustomerTypes in Model.CustomerTypes)
                        {
                            _listItems.Add(
                            new SelectListItem
                                             {
                                                 Text = $"{CustomerTypes.Description}",
                                                 Value = CustomerTypes.Id.ToString()
                                             });

                        }

                    }

                    @Html.DropDownListFor(m => m.Customers.CustomerTypeId,_listItems, "Seleccione Tipo de Cliente" ,new{@id="CustomerTypeId",@name="CustomerTypeId",@class = "form-control selectpicker",@required = "required",data_live_search = "true" })
                </div>


            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

